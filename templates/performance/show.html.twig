{% extends 'base.html.twig' %}

{% block title %}Performance{% endblock %}

{% block body %}
    <h1>Performance</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ performance.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ performance.date ? performance.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Starttime</th>
                <td>{{ performance.starttime ? performance.starttime|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Hall</th>
                <td>{{ performance.hall }}</td>
            </tr>
            <tr>
                <th>MaxSeats</th>
                <td>{{ performance.maxSeats }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-info" href="{{ path('performance_index') }}">back to list</a>

    <a class="btn btn-warning" href="{{ path('performance_edit', {'id': performance.id}) }}">edit</a>

    {{ include('performance/_delete_form.html.twig') }}
{% endblock %}
